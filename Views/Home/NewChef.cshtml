<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Add a Chef</title>
    </head>

    <body>
        <a href="/">Home</a>
        <h1>Add a Chef</h1>
        @model NewChefView
        <form asp-action="AddChef" asp-controller="Home" method="POST">
            <span asp-validation-for="newChef.FirstName"></span>
            <label asp-for="newChef.FirstName">First Name: </label>
            <input type="text" asp-for="newChef.FirstName">
            <br>

            <span asp-validation-for="newChef.LastName"></span>
            <label asp-for="newChef.LastName">Last Name: </label>
            <input type="text" asp-for="newChef.LastName">
            <br>

            <span asp-validation-for="newChef.BirthDate"></span>
            <label asp-for="newChef.BirthDate">Date of Birth: </label>
            <input type="date" asp-for="newChef.BirthDate">
            <br>

            <input type="submit" value="Add Chef">
        </form>
    </body>
</html>